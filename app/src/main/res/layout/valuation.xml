                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="4dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp">
                            <Spinner
                                android:id="@+id/lscoladdress"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:entries="@array/Address">

                            </Spinner>
                            </android.support.v7.widget.CardView>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="140dp"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/background">
                                    <EditText

                                        android:id="@+id/etcollandarea"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="Land Area"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="4dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp">
                                <Spinner

                                    android:id="@+id/lscollandarea"
                                    android:layout_width="170dp"
                                    android:layout_height="match_parent"
                                    android:entries="@array/Address">

                                </Spinner>
                                </android.support.v7.widget.CardView>


                            </LinearLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColorHint="@color/background">
                                <EditText
                                    android:id="@+id/etcolrate"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Rate "/>

                            </android.support.design.widget.TextInputLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="140dp"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/background">
                                    <EditText
                                        android:id="@+id/etcolconstarea"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="Const/Flat Area"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="4dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp">
                                <Spinner
                                    android:id="@+id/lscolconstarea"
                                    android:layout_width="170dp"
                                    android:layout_height="match_parent"

                                    android:entries="@array/Address">

                                </Spinner>
                                </android.support.v7.widget.CardView>


                            </LinearLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColorHint="@color/background">
                                <EditText
                                    android:id="@+id/etcolrate2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Rate "/>

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColorHint="@color/background">
                                <EditText
                                    android:id="@+id/etcolmarketvalue"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Market Value "/>

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColorHint="@color/background">
                                <EditText
                                    android:id="@+id/etrolreailzablevalue"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Realizable Value "/>

                            </android.support.design.widget.TextInputLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/et"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:textSize="16sp"
                                        android:text="Margin"/>


                                    <TextView
                                        android:id="@+id/ete"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:textSize="16sp"
                                        android:text="(RV/MV)*100"
                                        >

                                    </TextView>


                            </LinearLayout>
                        </LinearLayout>
                        </ScrollView>
                        <!--   Valuer  -->

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fillViewport="true">
                        <LinearLayout
                            android:id="@+id/llvaluer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            android:background="@color/bggray"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="14dp"
                                android:text="Valuer"
                                android:textSize="12sp"
                                android:textColor="@color/background"
                                android:gravity="bottom"/>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="4dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp">
                            <Spinner
                                android:id="@+id/lsvaluer"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:entries="@array/collateral">

                            </Spinner>
                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="14dp"
                                android:text="Valuer Type"
                                android:textSize="12sp"
                                android:textColor="@color/background"
                                android:gravity="bottom"/>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="4dp"
