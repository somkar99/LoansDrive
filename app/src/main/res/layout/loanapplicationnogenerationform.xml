<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="weapplify.tech.loandrivedemo.UI.LoanApplication">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

       <!-- <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="9"
            android:layout_height="match_parent">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="510dp">

                    <LinearLayout
                        android:id="@+id/background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:background="@color/toolbar">

                        </View>
                        <!-- <View
                             android:layout_width="match_parent"
                             android:layout_height="5dp"
                             android:background="@color/pendingorg"></View>
 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="700dp"
                            android:background="@color/bgcolor">

                        </View>

                    </LinearLayout>

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/dashboardbg"
                                android:elevation="10dp"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:text="Loan Application Form"
                                        android:textColor="@android:color/black"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />
                                    <View
                                        android:layout_width="170dp"
                                        android:layout_height="1.5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/textcolor">

                                    </View>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="5dp"
                                        android:weightSum="4">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:textSize="15sp"
                                            android:gravity="bottom"
                                            android:text="Branch * "
                                            android:textColor="@android:color/black"
                                            android:textStyle="bold" />


                                            <android.support.v7.widget.CardView
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_marginBottom="3dp"
                                                android:layout_marginTop="3dp"
                                                android:layout_weight="1"
                                                app:cardCornerRadius="4dp">

                                                <Spinner
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:entries="@array/collateral"></Spinner>
                                            </android.support.v7.widget.CardView>




                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:gravity="bottom"
                                            android:textSize="15sp"
                                            android:text="Zone * "
                                            android:textColor="@android:color/black"
                                            android:textStyle="bold" />

                                        <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:layout_height="0dp"
                                            android:layout_marginBottom="3dp"
                                            android:layout_marginTop="3dp"
                                            app:cardCornerRadius="4dp">

                                            <Spinner

                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:entries="@array/collateral"></Spinner>


                                        </android.support.v7.widget.CardView>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="5dp"
                                        android:weightSum="4">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:textSize="15sp"
                                            android:gravity="bottom"
                                            android:text="Hub * "
                                            android:textColor="@android:color/black"
                                            android:textStyle="bold" />


                                        <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_marginBottom="3dp"
                                            android:layout_marginTop="3dp"
                                            android:layout_weight="1"
                                            app:cardCornerRadius="4dp">

                                            <Spinner
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:entries="@array/collateral"></Spinner>
                                        </android.support.v7.widget.CardView>




                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                             />



                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_marginBottom="3dp"
                                                android:layout_marginTop="3dp"
                                                android:layout_weight="1"
                                                >

                                               <!-- <Spinner
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:entries="@array/collateral"></Spinner>-->
                                            </View>



                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="150dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="9"
                                android:background="@drawable/dashboardbg"
                                android:elevation="10dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"></View>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:orientation="vertical"
                                    android:weightSum="4">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="5dp"
                                            android:text="Name of Applicant * "
                                            android:textColor="@android:color/black"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                    <View
                                        android:layout_width="150dp"
                                        android:layout_height="1.5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/textcolor">

                                    </View>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"
                                            android:layout_weight="0.8"
                                            android:gravity="center_vertical"
                                            android:text="First Name:"
                                            android:textColor="@color/background"
                                            android:textSize="15sp" />

                                        <EditText
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"
                                            android:layout_weight="0.8"
                                            android:gravity="center_vertical"
                                            android:text="Middle Name:"
                                            android:textColor="@color/background"
                                            android:textSize="15sp" />

                                        <EditText
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"
                                            android:layout_weight="0.8"
                                            android:gravity="center_vertical"
                                            android:text="Last Name:"
                                            android:textColor="@color/background"
                                            android:textSize="15sp" />

                                        <EditText
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2" />

                                    </LinearLayout>


                                </LinearLayout>



                                <!--   Collateral  -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center_horizontal|bottom"
                                        android:text="Loan Terms "
                                        android:textColor="@android:color/black"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="1.5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/textcolor">

                                </View>


                                <LinearLayout
                                    android:id="@+id/llcolateral"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:orientation="vertical"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColor="@color/background"

                                    android:visibility="visible">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:gravity="bottom"
                                        android:text="Occupation"
                                        android:textColor="@color/background"
                                        android:textSize="14sp" />

                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_marginTop="3dp"
                                        app:cardCornerRadius="4dp">

                                        <Spinner
                                            android:id="@+id/spOccupation"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:entries="@array/occupation"></Spinner>
                                    </android.support.v7.widget.CardView>


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:gravity="bottom"
                                        android:text="Income Programme * :"
                                        android:textColor="@color/background"
                                        android:textSize="16sp" />

                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_marginTop="3dp"
                                        app:cardCornerRadius="4dp">

                                        <Spinner
                                            android:id="@+id/lscoladdress"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:entries="@array/Address">

                                        </Spinner>
                                    </android.support.v7.widget.CardView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:gravity="bottom"
                                        android:text="Product * :"
                                        android:textColor="@color/background"
                                        android:textSize="16sp" />

                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_marginTop="3dp"
                                        app:cardCornerRadius="4dp">

                                        <Spinner
                                            android:id="@+id/spProduct"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:entries="@array/Address">

                                        </Spinner>
                                    </android.support.v7.widget.CardView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:gravity="bottom"
                                        android:text=" Sub Product * :"
                                        android:textColor="@color/background"
                                        android:textSize="16sp" />

                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_marginTop="3dp"
                                        app:cardCornerRadius="4dp">

                                        <Spinner
                                            android:id="@+id/spSubProduct"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:entries="@array/Address">

                                        </Spinner>
                                    </android.support.v7.widget.CardView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:gravity="bottom"
                                        android:text="Scheme * :"
                                        android:textColor="@color/background"
                                        android:textSize="16sp" />

                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_marginTop="3dp"
                                        app:cardCornerRadius="4dp">

                                        <Spinner
                                            android:id="@+id/spScheme"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:entries="@array/Address">

                                        </Spinner>
                                    </android.support.v7.widget.CardView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:gravity="bottom"
                                        android:text="Rate Type * :"
                                        android:textColor="@color/background"
                                        android:textSize="16sp" />

                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_marginTop="3dp"
                                        app:cardCornerRadius="4dp">

                                        <Spinner
                                            android:id="@+id/spRateType"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:entries="@array/Address">

                                        </Spinner>
                                    </android.support.v7.widget.CardView>

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColorHint="@color/background">

                                        <android.support.design.widget.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Offered ROI * :"
                                            android:textColor="@color/background"
                                            android:textColorHint="@color/background"
                                            android:textSize="16sp" />
                                    </android.support.design.widget.TextInputLayout>

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColorHint="@color/background">

                                        <android.support.design.widget.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Offered Tenure(months) * :"
                                            android:textColor="@color/background"
                                            android:textColorHint="@color/background"
                                            android:textSize="16sp" />
                                    </android.support.design.widget.TextInputLayout>

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColorHint="@color/background">

                                        <android.support.design.widget.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Loan Amount Requested * :"
                                            android:textColor="@color/background"
                                            android:textColorHint="@color/background"
                                            android:textSize="16sp" />
                                    </android.support.design.widget.TextInputLayout>

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColorHint="@color/background">

                                        <android.support.design.widget.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Insurance Amount :"
                                            android:textColor="@color/background"
                                            android:textColorHint="@color/background"
                                            android:textSize="16sp" />
                                    </android.support.design.widget.TextInputLayout>

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColorHint="@color/background">

                                        <android.support.design.widget.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Total Loan Amount :"
                                            android:textColor="@color/background"
                                            android:textColorHint="@color/background"
                                            android:textSize="16sp" />

                                    </android.support.design.widget.TextInputLayout>

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColorHint="@color/background">

                                        <android.support.design.widget.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="EMT * :"
                                            android:textColor="@color/background"
                                            android:textSize="16sp" />
                                    </android.support.design.widget.TextInputLayout>


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>


                </FrameLayout>
            </LinearLayout>
        <!--</ScrollView>-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:paddingLeft="5dp"
          android:paddingRight="5dp"
          android:layout_gravity="bottom"
          android:background="@color/bgcolor"
          android:orientation="horizontal"
          android:weightSum="10"
          >

          <Button
              android:id="@+id/cbclear"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="4.99"
              android:background="@drawable/border"
              android:elevation="5dp"
              android:text="clear"
              android:textColor="@color/bgcolor" />

          <View
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight=".05">

          </View>

          <Button
              android:id="@+id/cbsubmit"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="4.99"
              android:elevation="5dp"
              android:background="@drawable/border"
              android:text="Submit"
              android:textColor="@color/bgcolor" />

      </LinearLayout>

  </FrameLayout>
</LinearLayout>